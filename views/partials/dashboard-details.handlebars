{{#each filteredBlogs}}
<div class = "section">
      <div class="card">
        <div class="card-title background">
          <a href="/edit/{{id}}"><h1 class = 'color'>{{this.title}}</h1></a><p class = 'color'>Created by {{this.user.username}} on {{@root.date}}</p>
        </div>
        <div class="card-content">
          <p>{{this.content}}</p>
        </div>
      </div>
      </div>
    {{/each}}