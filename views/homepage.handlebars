{{#if loggedIn}}
  <section>
    {{#each blogs as |blog|}}
      <div class = "card">
        <div class = "card-title">
          <h1>{{blog.title}}</h1><p>Created by on {{createdAt}}</p>
        </div>
        <div class = "card-content">
          <a href = '/blog/{{id}}'>{{blog.content}}</a>
        </div>
      </div>
    {{/each}}
  </section>
{{else}}
  <a href="/login">Must sign in to view content</a>
{{/if}}